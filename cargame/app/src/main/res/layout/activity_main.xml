<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#ADD8E6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucsc.anmimart.cargame.MainActivity">


    <ImageView
        android:id="@+id/lane0"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:src="@drawable/lane0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/lane1"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:src="@drawable/lane1"
        android:layout_alignTop="@+id/lane0"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/lane2"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:src="@drawable/lane2"
        android:layout_alignTop="@+id/lane0"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/bomb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bomb"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/car"
        android:layout_width="90dp"
        android:layout_height="162dp"
        android:src="@drawable/police"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed"
        android:id="@+id/speed"
        android:layout_alignTop="@+id/lane0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed2"
        android:id="@+id/speed2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/speed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="High"
        android:id="@+id/high"
        android:layout_alignTop="@+id/lane0"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>

